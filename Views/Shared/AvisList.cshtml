@model IEnumerable<TPLOCAL1.Models.Opinion>

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>AvisList</title>
    <link rel="stylesheet" href="~/resources/Index.css" />
    <link rel="stylesheet" href="~/resources/AvisList.css" />
</head>
<body>
    <header>
        <img src="~/resources/GroupeHN.png" class="image" alt="GroupeHN" />
        <h1>Liste des avis</h1>
    </header>

    <nav>
        <ul>
            <li><a href="/Home/Index">Accueil</a></li>
            <li><a href="/Home/Index/Form">Formulaire</a></li>
        </ul>
    </nav>

    <table>
        <caption>Liste</caption>
        <tr>
            <td>Nom</td>
            <td>Prénom</td>
            <td>Avis donné</td>
        </tr>

        @foreach (var item in Model) {
            <tr>
                <td>@item.LastName</td>
                <td>@item.FirstName</td>
                @if (@item.OpinionGiven == "O")
                {
                    var cssClass = "oui";
                    <td class="@cssClass">Oui</td>
                }
                @if (@item.OpinionGiven == "N")
                {
                    var cssClass = "non";
                    <td class="@cssClass">Non</td>
                }
            </tr>
        }
    </table>
</body>
</html>
