@model TPLOCAL1.Models.FormModel
@Html.ValidationSummary(false, "")

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Form</title>
    <link rel="stylesheet" href="~/resources/Index.css" />
    <link rel="stylesheet" href="~/resources/Form.css" />
</head>
<body>
    <header>
        <img src="~/resources/GroupeHN.png" class="image" alt="GroupeHN" />
        <h1>Formulaire TP HN avis</h1>
    </header>

    <nav>
        <ul>
            <li><a href="/Home/Index">Accueil</a></li>
            <li><a href="/Home/Index/AvisList">Liste avis</a></li>
        </ul>
    </nav>

    <form asp-action="ValidationFormulaire" asp-controller="Home" method="post">
    <table>
        <caption>Informations personnelles</caption>
            <tr>
                <td>
                    <label asp-for="nom">Nom</label>
                </td>
                <td>
                    <input asp-for="nom" type="text" id="nom" name="nom">
                </td>
            </tr>
            <tr>
                <td>
                    <label asp-for="prenom">Prénom</label>
                </td>
                <td>
                    <input asp-for="prenom" type="text" id="prenom" name="prenom">
                </td>
            </tr>
            <tr>
                <td>
                    <label asp-for="sexe">Sexe</label>
                </td>
                <td>
                    <select asp-for="sexe" id="sexe" name="sexe">
                        <option value="Sélectionner un sexe">Sélectionner un sexe</option>
                        <option value="Homme">Homme</option>
                        <option value="Femme">Femme</option>
                        <option value="Autre">Autre</option>
                    </select>
                    
                </td>
            </tr>
            <tr>
                <td>
                    <label asp-for="adresse">Adresse</label>
                </td>
                <td>
                    <input asp-for="adresse" type="text" id="adresse" name="adresse">
                </td>
            </tr>
            <tr>
                <td>
                    <label asp-for="codepost">Code Postal</label>
                </td>
                <td>
                    <input asp-for="codepost" type="text" id="codepost" name="codepost">
                </td>
            </tr>
            <tr>
                <td>
                    <label asp-for="ville">Ville</label>
                </td>
                <td>
                    <input asp-for="ville" type="text" id="ville" name="ville">
                </td>
            </tr>
            <tr>
                <td>
                    <label asp-for="mail">Adresse mail</label>
                </td>
                <td>
                    <input asp-for="mail" type="text" id="mail" name="mail">
                </td>
            </tr>        
    </table>

    <table>
        <caption>Informations formation suivie</caption>
        <tr>
            <td>
                <label asp-for="datedeb">Date début formation</label>
            </td>
            <td>
                <input asp-for="datedeb" type="date" id="datedeb" name="datedeb" min="2021-01-01">
            </td>
        </tr>
        <tr>
            <td>
                <label asp-for="formation">Formation suivie</label>
            </td>
            <td>
				<select asp-for="formation" id="formation" name="formation">
					<option value="Sélectionner une formation">Sélectionner une formation</option>
					<option value="Cobol">Cobol</option>
					<option value="Object">Object</option>
					<option value="Dual Skills">Dual Skills</option>
				</select>
            </td>
        </tr>
    </table>

    <table>
        <caption>Avis sur la formation</caption>
        <tr>
            <td>
                <label asp-for="cobol">Formation Cobol</label>
            </td>
            <td>
                <input asp-for="cobol" type="text" id="cobol" name="cobol">
            </td>
        </tr>
        <tr>
            <td>
                <label asp-for="csharp">Formation C#</label>
            </td>
            <td>
                <input asp-for="csharp" type="text" id="csharp" name="csharp">
            </td>
        </tr>
    </table>

    <p>
        <input type="submit" value="Valider">
    </p>

    </form>

</body>
</html>
