    </nav>

    <p>Votre formulaire a bien été pris en compte</p>

    <form>
    <table>
        <caption>Informations personnelles</caption>
            <tr>
                <td>
                    <label asp-for="nom">Nom</label>
                </td>
                <td>
                    <input asp-for="nom" readonly="readonly">
                </td>
            </tr>
            <tr>
                <td>
                    <label asp-for="prenom">Prénom</label>
                </td>
                <td>
                    <input asp-for="prenom" readonly="readonly">
                </td>
            </tr>
            <tr>
                <td>
                    <label asp-for="sexe">Sexe</label>
                </td>
                <td>
                    <input asp-for="sexe" readonly="readonly">
                </td>
            </tr>
            <tr>
                <td>
                    <label asp-for="adresse">Adresse</label>
                </td>
                <td>
                    <input asp-for="adresse" readonly="readonly">
                </td>
            </tr>
            <tr>
                <td>
                    <label asp-for="codepost">Code Postal</label>
                </td>
                <td>
                    <input asp-for="codepost" readonly="readonly">
                </td>
            </tr>
            <tr>
                <td>
                    <label asp-for="ville">Ville</label>
                </td>
                <td>
                    <input asp-for="ville" readonly="readonly">
                </td>
            </tr>
            <tr>
                <td>
                    <label asp-for="mail">Adresse mail</label>
                </td>
                <td>
                    <input asp-for="mail" readonly="readonly">
                </td>
            </tr>        
    </table>

    <p></p>

    <table>
        <caption>Informations formation suivie</caption>
        <tr>
            <td>
                <label asp-for="datedeb">Date début formation</label>
            </td>
            <td>
                <input asp-for="datedeb" readonly="readonly">
            </td>
        </tr>
        <tr>
            <td>
                <label asp-for="formation">Formation suivie</label>
            </td>
            <td>
				<input asp-for="formation" readonly="readonly">
            </td>
        </tr>
    </table>

    <p></p>

    <table>
        <caption>Avis sur la formation</caption>
        <tr>
            <td>
                <label asp-for="cobol">Formation Cobol</label>
            </td>
            <td>
                <input asp-for="cobol" readonly="readonly">
            </td>
        </tr>
        <tr>
            <td>
                <label asp-for="csharp">Formation C#</label>
            </td>
            <td>
                <input asp-for="csharp" readonly="readonly">
            </td>
        </tr>
    </table>
    </form>
